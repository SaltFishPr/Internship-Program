<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/setting_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:layout_margin="4dp"
        android:src="@drawable/ic_menu" />

    <TextView
        android:id="@+id/setting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/setting_icon"
        android:text="姓名"
        android:textColor="@color/fontSelected"
        android:textSize="@dimen/bigFontSize" />

    <ImageView
        android:id="@+id/setting_rightArrow"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_arrow_right"
        android:visibility="visible" />

    <TextView
        android:id="@+id/setting_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginEnd="10dp"
        android:layout_toLeftOf="@+id/setting_rightArrow"
        android:text="张三"
        android:textColor="@color/fontSelected"
        android:textSize="@dimen/regularFontSize"
        android:visibility="visible" />

    <TextView
        android:id="@+id/setting_bottom"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/fontGray" />
</RelativeLayout>