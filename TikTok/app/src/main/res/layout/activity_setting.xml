<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context=".SettingActivity">

    <RelativeLayout
        android:id="@+id/rea_1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ic_arrow_left" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"

            android:text="设置"
            android:textColor="@color/white"
            android:textSize="@dimen/titleSize" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/fontGray" />

    <com.exercise.tiktok.views.SettingItem
        android:id="@+id/text_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:setting_describe="123456"
        app:setting_drawable_left="true"
        app:setting_icon="@drawable/ic_like"
        app:setting_title="抖音号" />

    <com.exercise.tiktok.views.SettingItem
        android:id="@+id/pwd_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:setting_describe=""
        app:setting_drawable_left="true"
        app:setting_icon="@drawable/ic_like"
        app:setting_title="密码" />

    <com.exercise.tiktok.views.SettingItem
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:setting_describe=""
        app:setting_drawable_left="true"
        app:setting_icon="@drawable/ic_like"
        app:setting_title="退出登录" />

</LinearLayout>